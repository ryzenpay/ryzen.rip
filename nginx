server {
        listen 80 default_server;
        listen [::]:80 default_server;


        root /var/www/html;

        index index.html index.htm search.html;

        server_name ryzen.rip;

        location / {
                autoindex on;
		autoindex_localtime on;
		add_before_body /var/www/html/.theme/header.html;
		add_after_body /var/www/html/.theme/footer.html;
                try_files $uri $uri/ =404;
        }

    	# Display content for specific file types
    	location ~* \.(txt|log|conf|sh)$ {
        	add_header Content-Type text/plain;
    	}
}
