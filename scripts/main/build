#this is the build command for the search page, this is built into the sync script
cd /tmp/ryzen

find . -type d -not -path "*/.*" | while read dir; do
	cd "$dir"
	tree -H '.' -L 1 --noreport --dirsfirst -T "$dir/Downloads" -s -D --charset utf-8 -I "*.html|.*" -o "search.html"	
	echo "<style> html { color-scheme: light dark; } body { width: 35em; margin: 0 auto; font-family: Tahoma, Verdana, Arial, sans-serif; }</style>" >> search.html
	cd /tmp/ryzen
	echo "Search build in: $dir"
done




echo "completed build"
#echo "<style> html { color-scheme: light dark; } body { width: 35em; margin: 0 auto; font-family: Tahoma, Verdana, Arial, sans-serif; }</style>" >> $dir/search.html
